<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="256dp">

            <TextView
                android:id="@+id/register_heading"
                android:layout_marginTop="75dp"
                android:textSize="26sp"
                android:textColor="#FFF"
                android:text="REGISTER"
                android:textAlignment="center"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgnewtask"
            android:orientation="vertical"
            android:paddingBottom="22dp"
            android:paddingTop="16dp">

            <Spinner
                android:id="@+id/class_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/register_name_heading"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Name"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/register_name"
                    android:inputType="text"
                    android:background="@drawable/bgtaskinput"
                    android:paddingLeft="12dp"
                    android:textColorHint="#B5B5B5"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Name"
                    android:maxLength="25"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/register_email_heading"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Email"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/register_email"
                    android:inputType="text"
                    android:background="@drawable/bgtaskinput"
                    android:paddingLeft="12dp"
                    android:textColorHint="#B5B5B5"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Email"
                    android:maxLength="25"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/register_password_heading"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Password"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/register_password"
                    android:inputType="text"
                    android:background="@drawable/bgtaskinput"
                    android:paddingLeft="12dp"
                    android:textColorHint="#B5B5B5"
                    android:maxLength="50"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/register"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:background="@drawable/bgbtncreate"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <Button
            android:id="@+id/link_Login"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:text="Login"
            android:textColor="#AFAFAF"
            android:textAllCaps="false"
            android:background="@drawable/bgbtncancel"
            android:textSize="22sp"
            android:onClick="openLogPage"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </LinearLayout>